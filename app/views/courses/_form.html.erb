</div>

<div>
    <%= form.label :location, style: "display: block" %>
    <%= form.text_field :location %>
</div>

<div>
    <%= form.label :par, style: "display: block" %>
    <%= form.number_field :par %>
</div>

<div>
    <%= form.label :image, "Course Image" %>
